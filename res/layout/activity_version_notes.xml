<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/transparent_window"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" >

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".VersionNotesActivity" >

        <TextView
            android:id="@+id/version_notes_title"
            style="@style/BoldText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_world"
            android:textColor="@color/foreground1"
            android:textSize="18dip" />

        <ScrollView
            android:id="@+id/scroll_notes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignLeft="@+id/version_notes_title"
            android:layout_below="@+id/version_notes_title"
            android:layout_marginTop="20dip" >

            <TextView
                android:id="@+id/version_notes_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="_notes_content"
                android:textSize="15dip" />
        </ScrollView>

        <ImageView
            android:id="@+id/about_servando_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/version_notes_title"
            android:layout_marginTop="5dip"
            android:src="@drawable/agenda_grid_item_bg" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="20dip"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/version_notes_title"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/version_notes_title"
            android:src="@drawable/app_icon" />

    </RelativeLayout>

</RelativeLayout>