<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/advice_envelope"
        android:layout_width="fill_parent"
        android:layout_height="120dip"
        android:layout_alignTop="@+id/sending_advice_message"
        android:layout_centerHorizontal="true"
        android:scaleType="fitStart"
        android:layout_marginTop="50dip"
        android:src="@drawable/envelope" />

    <TextView
        android:id="@+id/sending_advice_message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dip"
        android:gravity="center"
        android:text="@string/sending_advice"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/foreground2"
        android:textSize="22dip" />

    <ImageView
        android:id="@+id/advice_envelope_success"
        android:layout_width="wrap_content"
        android:layout_height="120dip"
        android:layout_below="@+id/sending_advice_message"
        android:layout_centerHorizontal="true"
        android:scaleType="fitStart"
        android:src="@drawable/envelope_success"
        android:visibility="invisible" />

</RelativeLayout>